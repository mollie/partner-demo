{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "symfony/console": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.4",
        "slevomat/coding-standard": "^5.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "test:cs": "phpcs --standard=config/phpcs.xml --colors -ps",
        "test:stan": "phpstan analyse src tests --level=max --ansi",
        "test:unit": "phpunit -c config/phpunit.xml --testdox --color=always --testsuite Unit",
        "test:int": "phpunit -c config/phpunit.xml --testdox --color=always --testsuite Integration",
        "tests": [
            "@test:cs",
            "@test:stan",
            "@test:unit",
            "@test:int"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
